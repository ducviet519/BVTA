@model DataBVTA.Models.ViewModels.PermissionViewModel

@{
    ViewData["Title"] = "Người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12 text-center">

            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card-body">
                    <!--Bảng biểu mẫu -->
                    <div class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-9">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Danh sách Người dùng</h3>
                                        @* <a class="btn btn-success justify-content-end" data-toggle="ajax-modal" data-target="#addRoles" data-url="/Roles/CreateRoles"><i class="fa fa-plus"></i> &nbsp Thêm Role</a>*@
                                    </div>
                                    <!-- /.card-header -->
                                    <!-- form start -->
                                    <form>
                                        <div class="card-body">
                                            <table class="table table-bordered table-striped dataTable dtr-inline" width="100%" role="grid" id="tableRoles">
                                                <thead>
                                                    <tr>
                                                        <th class="text-wrap w-aut0">#</th>
                                                        <th class="text-wrap w-aut0">Tên người dùng</th>
                                                        <th class="text-wrap w-aut0">Tài khoản</th>
                                                        <th class="text-wrap w-aut0">Email</th>
                                                        <th class="text-wrap w-aut0">Trạng thái</th>
                                                        <th class="text-wrap w-aut0">Nhóm</th>
                                                        <th class="text-wrap w-aut0">Phân quyền</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        if (Model.ListUsers != null && Model.ListUsers.Count > 0)
                                                        {
                                                            foreach (var item in Model.ListUsers)
                                                            {
                                                                <tr>
                                                                    <td>@item.UserID</td>
                                                                    <td>@item.DisplayName</td>
                                                                    <td>@item.UserName</td>
                                                                    <td>@item.Email</td>
                                                                    <td>
                                                                        @if (item.Status == true)
                                                                        {
                                                                            <span class="badge bg-success">Đang sử dụng</span>
                                                                        }
                                                                        else if (item.Status == false)
                                                                        {
                                                                            <span class="badge bg-danger">Ngưng sử dụng</span>
                                                                        }
                                                                    </td>
                                                                    <td>
                                                                        @foreach (var roles in Model.UserInRoles)
                                                                        {
                                                                            <span class="badge bg-primary">@roles.RoleName</span>
                                                                        }
                                                                    </td>
                                                                    <td>
                                                                        <div class="btn-group">
                                                                            <button type="button" class="btn btn-outline-dark dropdown-toggle" data-toggle="dropdown">
                                                                                Phân quyền
                                                                            </button>
                                                                            <div class="dropdown-menu" role="menu">
                                                                                <a class="dropdown-item" data-toggle="ajax-modal" data-target="#userRoles-@item.UserID" data-url="/Permission/UserRoles?id=@item.UserID"><i class="fa fa-share-alt"></i> &nbsp Phân theo nhóm quyền</a>
                                                                                <a class="dropdown-item" data-toggle="ajax-modal" data-target="#userRoles-@item.UserID" data-url="/Permission/UserRoles?id=@item.UserID"><i class="fa fa-share-alt"></i> &nbsp Phân theo chức năng</a>
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.card-body -->
                                        <div class="card-footer">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="ReportPopup"></div>
</section>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('body').on('click', 'a[data-toggle="ajax-modal"]', function (event) {
                var url = $(this).data('url');
                $(this).callModal(url);
            });
            $('body').on('click', 'button[data-toggle="ajax-modal"]', function (event) {
                var url = $(this).data('url');
                $(this).callModal(url);
            });
        });
    </script>
}