
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Phiếu khám bệnh</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>
<body>
    <style type="text/css">
        body {
            font-family: 'Times New Roman', Times, serif;
            font-size: 14px;
        }

        .tieude {
            text-transform: uppercase;
            font-weight: bold;
            text-align: center;
            font-size: 18px;
        }

        .tieumuc {
            font-weight: bold;
            text-transform: uppercase;
            text-align: left;
        }

        .noidung {
            font-weight: bold;
            color: cornflowerblue;
        }
    </style>
    <div class="container m-5">
        <div class="row">
            <div class="col-12 text-center">
                <label class="col-12 tieude mb-0">PHIẾU KHÁM BỆNH / MEDICAL RECORD</label>
                <label class="col-12">PHÒNG KHÁM/CLINIC:</label>
            </div>
        </div>
        <!-- I. HÀNH CHÍNH/PATIENT INFORMATION -->
        <div class="row">
            <div class="col-12 text-left">
                <div class="col-12">
                    <label class="tieumuc">I. HÀNH CHÍNH/PATIENT INFORMATION:</label>
                </div>
                <div class="col-12">
                    <div class="row justify-content-start">
                        <label class="col-auto">1. Họ và tên BN (In hoa)/Patient's name:</label>
                        <label class="col-auto noidung" style="text-transform:uppercase;">Nguyễn Văn A</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row justify-content-between">
                        <div class="col">
                            <div class="row justify-content-start">
                                <label class="col-auto">2. Ngày sinh/DOB (dd/mm/yyyy):</label>
                                <label class="col-auto noidung">19/05/1995</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row justify-content-start">
                                <label class="col-auto">7. Điện thoại liên hệ/Phone No:</label>
                                <label class="col-auto noidung">0975318195</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row justify-content-between">
                        <div class="col">
                            <div class="row justify-content-start">
                                <label class="col-auto">3. Tuổi/Age:</label>
                                <label class="col-auto noidung">30 Tuổi</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row justify-content-start">
                                <label class="col-auto">4.Giới/Gender:</label>
                                <label class="col-auto noidung">Nữ/Female</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row justify-content-start">
                                <label class="col-auto">5. Quốc tịch/Nationality:</label>
                                <label class="col-auto noidung">Việt Nam</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row justify-content-start">
                        <label class="col-auto">6. Địa chỉ/Address:</label>
                        <label class="col-auto noidung" style="text-transform:capitalize">Số 108 Hoàng Như Tiếp, phường bồ đề, quận long biên, thành phố hà nội</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row justify-content-start">
                        <label class="col-auto">7. Ngày giờ đến khám/Examination date (dd/mm/yyyy):</label>
                        <label class="col-auto noidung">07 giờ 00 phút ngày 01/01/2022</label>
                    </div>
                </div>

            </div>
            <!-- I. HÀNH CHÍNH/PATIENT INFORMATION -->
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
